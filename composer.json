{
    "name": "cremir/weight-conversions",
    "description": "Weight conversions in PHP",
    "keywords": [
        "cremir",
        "weight-conversions"
    ],
    "homepage": "https://github.com/cremir/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Joseph Oluwayomi Ajibodu",
            "email": "josephajibodu@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.15",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Cremir\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cremir\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
